<div class="containter p-4">
    <h1 class="text-center">Burger App</h1>
    <br>

    <div class="row text-center">
        <div class="col col-md-4 col-sm-12 col-xs-12">
            <h2>Create Burger</h2>

            <form class="create-form">

                <div class="form-group">
                    <label for="burger-name">Burger Name:</label>
                    <input type="text" id="burger-name" name="newBurger">
                </div>
                <button type="submit" class="btn btn-dark">Create Burger</button>
            </form>
            <br>
            <br>
        </div>
        <div class="col col-md-4 col-sm-12 col-xs-12">
            <h2>Eat Burger</h2>
            <br>
            <img id="eat-gif"
                src="https://media0.giphy.com/media/QNZn5pG43P2Vi/giphy.gif?cid=790b7611e5435fcb66ddcd324d7eddda946cc7256083fa2e&rid=giphy.gif"
                alt="">
            <br>
            <br>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{burger_name}}
                <button type="button" class="burgerButton btn btn-dark" id="{{id}}" value="1">Eat Burger</button>
                <br>
                <br>
                {{/unless}}
                {{/each}}
            </ul>
            <br>
            <br>
        </div>

        <div class="col col-md-4 col-sm-12 col-xs-12">
            <h2>Consumed Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{burger_name}}
                <br>
                {{/if}}
                {{/each}}
            </ul>
            <br>
            <br>
        </div>
    </div>
</div>